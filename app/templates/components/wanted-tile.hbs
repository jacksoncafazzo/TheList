{{#md-card-collapsible class="popout"}}
  {{#each model as |wanted|}}
    {{#md-collapsible icon="mdi-image-filter-drama" title=wanted.want}}
      {{#link-to 'wanted' wanted.id}}
        {{wanted.want}}
      {{/link-to}}
      {{wanted.description}}<br>
      Posted by: {{wanted.poster}}<br>
      At: {{formatDate wanted.posted}}<br>
      Offering: {{wanted.offer}}
      {{#link-to 'wanted' wanted.id}}Edit details{{/link-to}}
    {{/md-collapsible}}
  {{/each}}
{{/md-card-collapsible}}
