{{#if updateForSale}}
<h4>Update {{forsale.item}}</h4>
  <form>
    <div class="row">
      <div class="input-field col s6">
        <label for="item">{{forsale.item}}</label>
        {{input value=item id="item"}}
      </div>
      <div class="row">
        <div class="input-field col s6">
          <label for="poster">{{forsale.poster}}</label>
          {{input value=poster id="poster"}}
        </div>
      </div>
      <div class="input-field col s12">
        <label for="description">{{forsale.description}}</label>
        {{input value=description id="description"}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <label for="condition">{{forsale.condition}}</label>
        {{input value=condition id="condition"}}
      </div>
      <div class="input-field col s6">
        <label for="price">{{forsale.price}}</label>
        {{input value=price id="price"}}
      </div>
    </div>

    <a class="waves-effect waves-light btn" {{action 'update' forsale}}>Update</a>
  </form>
{{else}}
{{#md-btn action='updateForSale'}}Show update Form{{/md-btn}}
{{/if}}
